@model List<Otel_Sistemi.Models.AboutItem>
@{
    ViewData["Title"] = "AboutItem Listesi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<br />
<h2>Hakkımızda Maddeleri</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Madde</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Madde</td>
                <td>
                    <a href="/AboutItem/Edit/@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a href="/AboutItem/Delete/@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<a href="/AboutItem/Create" class="btn btn-primary mb-3">Yeni Madde Ekle</a>
