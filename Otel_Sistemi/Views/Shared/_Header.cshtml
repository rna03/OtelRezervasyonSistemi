@inject IHttpContextAccessor HttpContextAccessor
@model Otel_Sistemi.Models.HotelInfo
@using System.Security.Claims

@{
    var isAuthenticated = User.Identity.IsAuthenticated;
    var adSoyad = User.FindFirst(ClaimTypes.Name)?.Value;
}

@{
    var userId = HttpContextAccessor.HttpContext?.Session.GetInt32("UserId");
    var userAdSoyad = HttpContextAccessor.HttpContext?.Session.GetString("UserAdSoyad");
}
<style>
    .menu-divider {
        border: none;
        height: 1px;
        background-color: #e5e5e5; /* Açık gri çizgi */
        margin: 0;
    }

</style>
<!-- Header Section Begin -->
<header class="header-section">
    <div class="top-nav">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6">
                    <ul class="tn-left">
                        <li><i class="fa fa-phone"></i> @Model.Telefon</li>
                        <li><i class="fa fa-envelope"></i> @Model.Email</li>
                    </ul>
                </div>
                <div class="col-lg-6">
                    <div class="tn-right">
                        <div class="top-social">
                            <a href="@Model.SosyalFacebook"><i class="fa fa-facebook"></i></a>
                            <a href="@Model.SosyalTwitter"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-tripadvisor"></i></a>
                            <a href="@Model.SosyalInstagram"><i class="fa fa-instagram"></i></a>
                        </div>

                        @if (isAuthenticated)
                        {
                            <span class="text-black">Hoş geldin, @adSoyad</span>
                            <a href="@Url.Action("Logout", "Account")" class="bk-btn">Çıkış Yap</a>
                        }
                        else
                        {
                            <a href="@Url.Action("Login", "Account")" class="bk-btn">Giriş Yap / Kayıt Ol</a>
                        }


                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="menu-item">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-2">
                    <div class="logo">
                        <a asp-controller="Home" asp-action="Index">
                            <img src="~/img/logo.png" alt="Logo">
                        </a>
                    </div>
                </div>
                <div class="col-lg-10">
                    <div class="nav-menu">
                        <nav class="mainmenu mobile-menu">
                            <ul>
                                <li><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                                <li><a asp-controller="Home" asp-action="Rooms">Odalar</a></li>
                                <li><a asp-controller="Home" asp-action="AboutUs">Hakkımızda</a></li>
                                <li><a asp-controller="Home" asp-action="Contact">İletişim</a></li>
                                <li><a asp-controller="Reservation" asp-action="MyReservations">Rezervasyonlarım</a></li>
                            </ul>
                        </nav>

                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Header End -->
<hr class="menu-divider" />