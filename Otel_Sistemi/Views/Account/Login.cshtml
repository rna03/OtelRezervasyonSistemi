@model Otel_Sistemi.Models.LoginViewModel
@{
    Layout = null; // Bu giriş sayfası için boş layout
}
<!doctype html>
<html lang="en">
<head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/login-form-20/css/style.css">
</head>
<body class="img js-fullheight" style="background-image: url(/login-form-20/images/bg.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Otel Giriş</h2>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Giriş Yap</h3>

                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger">@ViewBag.Error</div>
                        }

                        <form asp-controller="Account" asp-action="Login" method="post" class="signin-form">
                            <div class="form-group">
                                <input asp-for="TcKimlikNo" class="form-control" placeholder="TC Kimlik No" />
                                <span asp-validation-for="TcKimlikNo" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input asp-for="Sifre" type="password" class="form-control" placeholder="Şifre" />
                                <span asp-validation-for="Sifre" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Giriş Yap</button>
                            </div>
                        </form>
                        <div class="form-group mt-4 text-center">
                            <p style="color: white;">Hesabınız yok mu?</p>
                            <a href="@Url.Action("Register", "Account")" class="btn btn-outline-light px-4 py-2 rounded-pill">Kayıt Ol</a>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="/login-form-20/js/jquery.min.js"></script>
    <script src="/login-form-20/js/popper.js"></script>
    <script src="/login-form-20/js/bootstrap.min.js"></script>
    <script src="/login-form-20/js/main.js"></script>
</body>
</html>
