@model Otel_Sistemi.Models.RegisterViewModel
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>Kayıt Ol</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/login-form-20/css/style.css">
</head>
<body class="img js-fullheight" style="background-image: url(/login-form-20/images/bg.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Otel Kayıt</h2>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Kayıt Ol</h3>

                        <form asp-action="Register" method="post" class="signin-form">
                            <div class="form-group">
                                <input asp-for="Ad" class="form-control" placeholder="Ad" />
                                <span asp-validation-for="Ad" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input asp-for="Soyad" class="form-control" placeholder="Soyad" />
                                <span asp-validation-for="Soyad" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input asp-for="Email" type="email" class="form-control" placeholder="E-posta" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input asp-for="TcKimlikNo" class="form-control" placeholder="TC Kimlik No" />
                                <span asp-validation-for="TcKimlikNo" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input asp-for="Sifre" type="password" class="form-control" placeholder="Şifre" />
                                <span asp-validation-for="Sifre" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Kayıt Ol</button>
                            </div>
                        </form>

                        <div class="form-group mt-3 text-center">
                            <p style="color: white;">Zaten hesabınız var mı?</p>
                            <a href="@Url.Action("Login", "Account")" class="btn btn-outline-light px-4 py-2 rounded-pill">Giriş Yap</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="/login-form-20/js/jquery.min.js"></script>
    <script src="/login-form-20/js/popper.js"></script>
    <script src="/login-form-20/js/bootstrap.min.js"></script>
    <script src="/login-form-20/js/main.js"></script>
</body>
</html>
