                        <form asp-action="CheckAvailability" asp-controller="Home" method="post">
                            @Html.AntiForgeryToken()

                            <div class="check-date">
                                <label for="date-in">Giriş:</label>
                                <input asp-for="ReservationForm.GirisTarihi" type="date" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="ReservationForm.GirisTarihi" class="text-danger"></span>
                            </div>

                            <div class="check-date">
                                <label for="date-out">Çıkış:</label>
                                <input asp-for="ReservationForm.CikisTarihi" type="date" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="ReservationForm.CikisTarihi" class="text-danger"></span>
                            </div>


                            <div class="select-option">
                                <label for="guest">Misafir:</label>
                                <select asp-for="ReservationForm.YetiskinSayisi" class="form-control">
                                    <option value="1">1 Yetişkin</option>
                                    <option value="2">2 Yetişkin</option>
                                    <option value="3">3 Yetişkin</option>
                                    <option value="4">4 Yetişkin</option>
                                </select>
                                <span asp-validation-for="ReservationForm.YetiskinSayisi" class="text-danger"></span>
                            </div>

                            <div class="select-option">
                                <label for="children">Çocuk:</label>
                                <select asp-for="ReservationForm.CocukSayisi" class="form-control">
                                    <option value="0">0 Çocuk</option>
                                    <option value="1">1 Çocuk</option>
                                    <option value="2">2 Çocuk</option>
                                </select>
                                <span asp-validation-for="ReservationForm.CocukSayisi" class="text-danger"></span>
                            </div>


                            <div class="select-option">
                                <label for="room">Oda:</label>
                                <select asp-for="ReservationForm.OdaSayisi" class="form-control">
                                    <option value="1">1 Oda</option>
                                    <option value="2">2 Oda</option>
                                    <option value="3">3 Oda</option>
                                </select>
                                <span asp-validation-for="ReservationForm.OdaSayisi" class="text-danger"></span>
                            </div>

                            <button type="submit" class="primary-btn">Check Availability</button>
                        </form>
                        

