@model Otel_Sistemi.Models.RoomService
@{
    ViewData["Title"] = "Yeni Oda Hizmeti";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-3">
    <h2>Yeni Oda Hizmeti Ekle</h2>
    <form method="post">
        <div class="form-group">
            <label>Oda Türü</label>
            <input type="text" name="OdaTuru" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Hizmet</label>
            <input type="text" name="Hizmet" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-success">Kaydet</button>
    </form>
</div>
