@model List<Otel_Sistemi.Models.HotelInfo>

@{
    ViewData["Title"] = "Otel Bilgileri";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<br />
<h2>Otel Bilgileri</h2>



<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Otel İsmi</th>
            <th>Telefon</th>
            <th>Email</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OtelIsmi</td>
                <td>@item.Telefon</td>
                <td>@item.Email</td>
                <td>
                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-info btn-sm">Detay</a>
                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning btn-sm">Düzenle</a>
                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<a href="@Url.Action("Create")" class="btn btn-primary mb-3">Yeni Kayıt Ekle</a>