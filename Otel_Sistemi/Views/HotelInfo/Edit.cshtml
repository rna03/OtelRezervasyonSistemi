@model Otel_Sistemi.Models.HotelInfo

@{
    ViewData["Title"] = "Otel Bilgisi Düzenle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Otel Bilgisi Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Otel İsmi</label>
        <input asp-for="OtelIsmi" class="form-control" />
    </div>
    <div class="form-group">
        <label>Slogan</label>
        <input asp-for="Slogan" class="form-control" />
    </div>
    <div class="form-group">
        <label>Telefon</label>
        <input asp-for="Telefon" class="form-control" />
    </div>
    <div class="form-group">
        <label>Fax</label>
        <input asp-for="Fax" class="form-control" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Adres</label>
        <textarea asp-for="Adres" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Instagram</label>
        <input asp-for="SosyalInstagram" class="form-control" />
    </div>
    <div class="form-group">
        <label>Facebook</label>
        <input asp-for="SosyalFacebook" class="form-control" />
    </div>
    <div class="form-group">
        <label>Twitter</label>
        <input asp-for="SosyalTwitter" class="form-control" />
    </div>
    <div class="form-group">
        <label>Youtube</label>
        <input asp-for="SosyalYoutube" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">İptal</a>
</form>
